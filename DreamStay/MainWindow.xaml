<Window x:Class="DreamStay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DreamStay"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="#241f21">
    <Grid>

        <DockPanel>
            <Image Source=".\images\logo.jpg" Width="200" VerticalAlignment="Top"></Image>
        </DockPanel>
        <StackPanel VerticalAlignment="Center">
            
            <Button Width="120" Height="30" Name="btnLogIn" Click="btnLogIn_Click">Belépés</Button>
            
        </StackPanel>
    </Grid>
</Window>
